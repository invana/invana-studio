{
  "name": "invana-studio",
  "version": "1.0.0",
  "description": "Open source graph visualiser.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/invana/invana-studio.git"
  },
  "main": "public/electron.js",
  "author": {
    "name": "Ravi Raja Merugu",
    "email": "ravi@invana.io",
    "url": "https://invana.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/invana/invana-studio/issues"
  },
  "homepage": "/",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-regular-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "bootstrap": "^5.2.3",
    "buffer": "^6.0.3",
    "color-hash": "^2.0.1",
    "react": "^18.2.0",
    "react-bootstrap": "^2.6.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3",
    "react-scripts": "^5.0.1",
    "sass": "^1.56.1",
    "vis-data": "^7.1.4",
    "vis-network": "^8.2.0",
    "web-vitals": "^3.1.0"
  },
  "scripts": {
    "start": "PORT=3000 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "export BUILD_FOLDER=\"./build\" && if [ -e \"$BUILD_FOLDER\" ];then rm -rf \"$BUILD_FOLDER\" ; fi && npm run build",
    "electron-build:linux": "./node_modules/.bin/electron-builder  --linux deb zip rpm snap",
    "electron-build:mac": "./node_modules/.bin/electron-builder  --mac dmg zip",
    "electron-build:win": "./node_modules/.bin/electron-builder  --win msi zip --x64 ",
    "postinstall": "./node_modules/.bin/electron-builder install-app-deps",
    "release": "electron-builder --mac --windows --linux --publish onTagOrDraft"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.electron.${name}",
    "productName": "Invana Studio",
    "copyright": "Copyright &copy; 2021 ${name}",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "build/logo512.png",
      "target": [
        "msi",
        "zip"
      ]
    },
    "linux": {
      "icon": "build/logo512.png",
      "category": "Science",
      "target": [
        "deb",
        "rpm",
        "zip"
      ]
    },
    "mac": {
      "icon": "build/logo512.png",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/eslint-parser": "^7.19.1",
    "@electron-forge/cli": "^6.0.3",
    "concurrent": "^0.3.2",
    "electron": "^21.3.1",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1",
    "eslint-plugin-react": "^7.31.11",
    "style-loader": "^3.3.1",
    "wait-on": "^6.0.1"
  }
}
